<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="16dp"
    android:paddingHorizontal="24dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave an additional message"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/secondary_dark"
        android:drawableLeft="@drawable/send_fill0_wght400_grad0_opsz48"
        android:drawablePadding="8dp"
        android:layout_marginBottom="4dp"
        />
    <EditText
        android:id="@+id/request_dialog_edtxt"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/grey_background"
        android:cursorVisible="true"
        android:textSize="15sp"
        android:hint="Your Message"
        android:fontFamily="@font/nunito_sans"
        android:gravity="start"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"


        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/request_dialog_send_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="Send Request"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="10dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@color/primary"

            android:layout_height="48dp"/>
        <TextView
            android:id="@+id/request_dialog_cancel_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="Cancel"
            android:gravity="center"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="16sp"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="10dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"

            android:textColor="@color/primary"
            android:layout_height="48dp"/>


    </LinearLayout>


</LinearLayout>