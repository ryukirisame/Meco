<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"

    tools:context=".Fragments.CustomerRequestAccepted">

    <TextView
        android:id="@+id/customer_request_accepted_mechanic_name"
        android:layout_marginTop="36dp"
        android:paddingHorizontal="24dp"
        android:layout_marginHorizontal="24dp"
        android:text="Mechanic Name"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:background="@color/background_color"
        android:gravity="center"
        android:padding="8dp"
        android:textAllCaps="true"
        android:textColor="@color/dark_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/customer_request_accepted_mechanic_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/mulish_extrabold"
        android:gravity="center"
        android:text="MECHANIC DISTANCE"
        android:textColor="@color/secondary_dark"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/customer_request_accepted_mechanic_name" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@+id/customer_request_accepted_service_over">

        <TextView
            android:id="@+id/customer_request_accepted_locate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/primary"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="10dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Live Location" />

        <TextView
            android:id="@+id/customer_request_accepted_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/primary"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:textSize="17sp"
            android:text="Call"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/customer_request_accepted_service_over"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="48dp"
        android:text="Service Over"
        android:fontFamily="@font/nunito_sans_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>