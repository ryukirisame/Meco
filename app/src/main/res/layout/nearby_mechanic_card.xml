<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingLeft="24dp"
        app:contentPaddingRight="24dp"
        app:contentPaddingTop="16dp"
        app:contentPaddingBottom="4dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/card_mechanic_name"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:textColor="@color/dark_primary"
                android:gravity="center_horizontal"
                android:textSize="19sp"
                android:text="Mechanic Name" />

            <androidx.cardview.widget.CardView
                android:layout_marginTop="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/grey_background"
                android:layout_gravity="center"
               app:cardCornerRadius="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card_mechanic_distance"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"


                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_bold"
                    android:text="Distance"
                    android:textColor="@color/faint_grey"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"


                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/card_btn_request"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"

                    android:text="Request"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/card_btn_locate_mechanic"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:gravity="center"
                    android:text="Locate"
                    android:layout_marginHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:textColor="@color/primary" />


            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>