<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_light"
    tools:context=".Fragments.MechanicProfile">

    <TextView
        android:id="@+id/mechanic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="36dp"
        android:background="#dee2e6"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:gravity="center"
        android:padding="8dp"
        android:textAllCaps="true"
        android:textColor="@color/dark_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/mail_fill0_wght400_grad0_opsz48"
        android:drawablePadding="12dp"
        android:fontFamily="@font/mulish_bold"
        android:gravity="center"
        android:textSize="14sp"
        android:text="Email"
        android:textColor="#6C757D"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mechanic_name" />

    <TextView
        android:id="@+id/mechanic_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text=""
        android:textColor="#212529"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/call_fill0_wght400_grad0_opsz48"
        android:drawablePadding="12dp"
        android:fontFamily="@font/mulish_bold"
        android:text="Phone"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/faint_grey"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mechanic_email" />

    <TextView
        android:id="@+id/mechanic_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textColor="#212529"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/face_fill0_wght400_grad0_opsz48"
        android:drawablePadding="12dp"
        android:fontFamily="@font/mulish_bold"
        android:text="Account Type"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/faint_grey"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mechanic_phone"/>
    <TextView
        android:id="@+id/mechanic_account_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textColor="#212529"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/mechanic_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/nunito_bold"
        android:text="LOGOUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>